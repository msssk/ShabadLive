{
  "name": "shabad-live",
  "version": "0.0.1",
  "description": "Shabad Live shabad presenter",
  "main": "build/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:client": "parcel build src/client/index.html src/client/search.html --out-dir build/public --public-url ./ --experimental-scope-hoisting --detailed-report",
    "build:server": "parcel build src/server/server.ts --out-dir build --target node --detailed-report",
    "dev": "parcel src/client/index.html src/client/search.html --out-dir build/public --port 8081",
    "serve": "node build/server.js"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Firefox versions"
  ],
  "dependencies": {
    "@shabados/database": "^4.0.6",
    "@types/node": "^10.12.5",
    "@types/ws": "^6.0.1",
    "serve-static": "^1.13.2",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "cssnano": "^4.1.7",
    "typescript": "^3.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msssk/ShabadLive.git"
  },
  "keywords": [
    "shabad",
    "sabd",
    "kirtan",
    "gurbani"
  ],
  "author": "Mangala Sadhu Sangeet Singh Khalsa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/msssk/ShabadLive/issues"
  },
  "homepage": "https://github.com/msssk/ShabadLive#readme"
}
